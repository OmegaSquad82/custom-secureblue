{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "git-submodules": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "rmcrackan/Libation",
      "managerFilePatterns": [
        "recipes/recipe-*.yml"
      ],
      "matchStrings": [
        "/v(?<currentValue>.*?)/Libation",
        "/Libation.(?<currentValue>.*?)-"
      ]
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "github-releases"
      ],
      "matchDepNames": [
        "rmcrackan/Libation"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ],
  "pre-commit": {
    "enabled": true
  }
}